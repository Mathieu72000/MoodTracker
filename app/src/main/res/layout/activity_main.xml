<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    tools:context="com.corroy.mathieu.moodtracker.Controllers.MainActivity">

    <com.corroy.mathieu.moodtracker.Controllers.VerticalViewPager
        android:id="@+id/activity_main_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageButton
        android:id="@+id/activity_comment_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/ic_note_add_black" />

    <ImageButton
        android:id="@+id/activity_history_btn"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ic_history_black" />

</FrameLayout>